<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
    		/WEB-INF/spring/root-context.xml
    		/WEB-INF/spring/sqlmap-context.xml
    </param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- listener info start -->
	<listener>
		<listener-class>com.dreamsecurity.ca.framework.listener.ContextLoaderListener</listener-class>
	</listener>
	<!-- listener info end -->

	<!-- filter info start -->
	<!-- encodingFilter : UTF-8 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>com.dreamsecurity.ca.framework.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/**</url-pattern>
	</filter-mapping>

	<!-- session filter -->
	<filter>
		<filter-name>sessionFilter</filter-name>
		<filter-class>com.dreamsecurity.ca.framework.filter.SessionFilter</filter-class>
		<init-param>
			<param-name>redirectPage</param-name>
			<param-value>/</param-value>
		</init-param>
		<init-param>
			<param-name>excludeURL</param-name>
			<param-value>
				/login.do,/logout.do,/user/register.do,/showGroupInfo.do
			</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>sessionFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- savingrequeststream filter -->
	<filter>
		<filter-name>requestBodyFilter</filter-name>
		<filter-class>com.dreamsecurity.ca.framework.filter.RequestBodyFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>requestBodyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- filter info end -->

	<!-- tomcat DataSource -->
	<resource-ref>
		<description>jdbcJNDI</description>
		<res-ref-name>jdbc/miniCaPostgres</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>